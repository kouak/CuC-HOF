<h2>Renvoyer l'email de confirmation</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name)) do |f| %>

  <%= f.input :email %>

  <% f.buttons do %>
    <%= f.submit "Renvoyer l'email de confirmation" %>
  <% end %>
<% end %>


<h2>Editer <%= resource_name.to_s.humanize %></h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.input :email %>
  <%= f.input :username, :label => 'Username Forum CuC' %>

  <%= f.input :password, :hint => 'Laisser blanc pour ne pas modifier' %>
  <%= f.input :password_confirmation %>

  <%= f.input :current_password, :hint => 'Indiquez votre mot de passe actuel pour confirmer vos modifications', :required => true %>
  
  <% f.buttons do %>
    <%= f.submit 'Valider' %>
  <% end %>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Mécontent? <%= link_to "Supprimer mon compte", registration_path(resource_name), :confirm => "Etes vous sûr ?", :method => :delete %>.</p>

<%= link_to "Retour", :back %>
